<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.5"
        android:background="@color/thrive_green" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/goalImage"
            android:src="@drawable/runner"
            android:adjustViewBounds="true"
            android:paddingTop="32dp"
            android:paddingBottom="10dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/white" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I would like to"
                android:textSize="24sp"
                android:id="@+id/goalTypeText"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At a rate of"
                android:textSize="24sp"
                android:id="@+id/goalRateText"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/goalTypeText"
                android:layout_marginTop="32dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="For a total of"
                android:textSize="24sp"
                android:id="@+id/goalLengthText"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/goalRateText"
                android:layout_marginTop="32dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting Weight"
                android:textSize="24sp"
                android:id="@+id/startWeightText"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/goalLengthText"
                android:layout_marginTop="32dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal Weight"
                android:textSize="24sp"
                android:id="@+id/goalWeightText"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/startWeightText"
                android:layout_marginTop="32dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Target Daily Calories"
                android:textSize="18sp"
                android:id="@+id/targetCalsText"
                android:layout_marginLeft="15dp"
                android:layout_below="@+id/goalWeightText"
                android:layout_marginTop="32dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goalTypeEdit"
                android:layout_alignTop="@+id/goalTypeText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:editable="true"
                android:maxLines="1"
                android:minWidth="150dp"
                android:singleLine="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goalRateEdit"
                android:layout_alignTop="@+id/goalRateText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:editable="true"
                android:maxLines="1"
                android:minWidth="150dp"
                android:singleLine="true" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goalDurationEdit"
                android:layout_alignTop="@+id/goalLengthText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:editable="true"
                android:maxLines="1"
                android:minWidth="150dp"
                android:singleLine="true" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goalStartWeightEdit"
                android:layout_alignTop="@+id/startWeightText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:editable="false"
                android:focusable="false"
                android:maxLines="1"
                android:minWidth="150dp"
                android:singleLine="true" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goalTargetWeightEdit"
                android:layout_alignTop="@+id/goalWeightText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:editable="false"
                android:focusable="false"
                android:maxLines="1"
                android:minWidth="150dp"
                android:singleLine="true" />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/goalTargetCalsEdit"
                android:layout_alignTop="@+id/targetCalsText"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"
                android:editable="false"
                android:focusable="false"
                android:maxLines="1"
                android:minWidth="150dp"
                android:singleLine="true" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>